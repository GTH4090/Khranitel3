<Page x:Class="Khranitel.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Khranitel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Логин"/>
                <TextBox x:Name="LoginTbx"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Пароль"/>
                <PasswordBox x:Name="PasswordTbx"/>
            </StackPanel>
            <Button x:Name="AuthBtn" Content="Войти" Click="AuthBtn_Click"/>
            <Button x:Name="RegBtn" Content="Регистрация" Click="RegBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
