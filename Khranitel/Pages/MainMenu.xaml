<Page x:Class="Khranitel.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Khranitel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="RequesListBtn" Content="Просмотр заявок" Click="RequesListBtn_Click"/>
            <Button x:Name="RequestBtn" Content="Подать личн. заявку" Click="RequestBtn_Click"/>
            <Button x:Name="GruopBtn" Content="Подать груп. заявку" Click="GruopBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
